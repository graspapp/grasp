<%= form_for resource, :as => resource_name,
  :url =>registration_path(resource_name) do |form| %>

  <fieldset>

    <%= render 'personal_information_fields', form: form %>

    <% if request.fullpath.include? 'teacher' %>

      <%= render 'teacher_school_info_fields', form: form %>

    <% end %>

    <%= form.submit "Create Account", class: 'btn btn-primary' %>

  </fieldset>
<% end %>
