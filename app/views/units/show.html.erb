<% provide(:title, @unit.name) %>

<%= render 'edit_unit_modal' %>
<%= render 'delete_unit_modal' %>
<%= render 'teachers/concept_modal' %>

<div class="page-header">
  <h1><%= "Unit #{ @unit.number } - #{ @unit.name }" %></h1>
</div>

<% if !current_teacher.nil? %>

  <%= render 'teacher_view' %>
  
  <div class="panel-heading concept-heading clearfix">
      <%= link_to "Delete Unit", @unit, 
      class:'btn btn-default btn-sm pull-right',
      'data-toggle' => 'modal',
      'href' => '#deleteUnitModal' %>
  </div>
    
<% elsif !current_student.nil?  %>
  <%= render 'student_view' %>
<% end %>

