<div class="panel">
  <div class="panel-heading lt-heading clearfix">Learning Targets
    <% if teacher_signed_in? %>
    <a data-toggle="modal" href="#ltModal">
      <button type="button" class=" btn btn-default btn-sm pull-right">New Learning Target</button>
    </a>
    <% end %>
  </div>
  <table class="table" data-provides="rowlink">
    <tr>
      <th>LT</th>
      <th>Description</th>
      <th>View more</th>
    </tr>
    <% @unit.learning_targets.each do |lt| %>
      <tr>
        <td><%= lt.number %></td>
        <td><%= lt.description %></td>
        <td><%= link_to "View more", lt %></td>
      </tr>
    <% end %>
  </table>
</div>
