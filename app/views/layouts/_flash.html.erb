<% if notice %>
  <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert"
      aria-hidden="true">&times;</button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert"
      aria-hidden="true">&times;</button>
    <%= alert %>
  </div>
<% end %>
